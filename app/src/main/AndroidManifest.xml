<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- REMOVE camera permissions added by dependencies (not needed, triggers Play Protect) -->
    <uses-permission android:name="android.permission.CAMERA" tools:node="remove" />
    <uses-feature android:name="android.hardware.camera" tools:node="remove" />
    <uses-feature android:name="android.hardware.camera.front" tools:node="remove" />
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_CAMERA_TOGGLE" tools:node="remove" />
    
    <!-- REMOVE phone/contacts permissions (not needed, triggers Play Protect) -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" tools:node="remove" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" tools:node="remove" />
    <uses-permission android:name="android.permission.READ_CONTACTS" tools:node="remove" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" tools:node="remove" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" tools:node="remove" />
    
    <!-- Essential network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Location permissions for MDM LOCATE_DEVICE command -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Read IMEI/Serial for device pairing and enrollment -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- Essential Device Owner permissions (grantable to DPC apps) -->
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <!-- Background processing -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Battery optimization exemption (Keep-Alive) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- Shortcut creation for icon protection -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    
    <!-- Android 12+ (API 31+) Foreground Service Type Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_REMOTE_MESSAGING" />

    
    
    <!-- Storage permissions (for older Android versions) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    

    <!-- Firebase Messaging -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    
    <!-- Android 15: Enhanced security permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Android 11+ Package Visibility - Query all packages for app blocking -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" 
        tools:ignore="QueryAllPackagesPermission" />
    
    <!-- Overlay windows for blocking screens -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Package Usage Stats - Required for BlockedAppInterceptor -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    
    <!-- 
        REMOVIDO (2025-12-16): Permissões MANAGE_DEVICE_POLICY_* são privilegiadas e 
        bloqueiam o provisioning de Work Profile. Device Owner APIs funcionam sem elas.
        
        REMOVIDO: READ_PRIVILEGED_PHONE_STATE, INSTALL_PACKAGES, DELETE_PACKAGES,
                  MANAGE_DEVICE_ADMINS, MANAGE_PROFILE_AND_DEVICE_OWNERS, REBOOT,
                  MANAGE_USERS, CREATE_USERS, EXPAND_STATUS_BAR, BIND_DEVICE_SERVICE,
                  FOREGROUND_SERVICE_SYSTEM_EXEMPTED, REQUEST_PASSWORD_COMPLEXITY,
                  e todas as MANAGE_DEVICE_POLICY_* permissions
    -->
    
    <!-- Samsung Knox Permissions - DESABILITADO TEMPORARIAMENTE (aguardando aprovação licença Knox)
         ATENÇÃO: Ao descomentar, GERAR NOVO APK e NOVO QR CODE (checksum mudará!)
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_HW_CONTROL" />
    <uses-permission android:name="com.samsung.android.knox.permission.CUSTOM_SETTING" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_APP_MGMT" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_RESTRICTION_MGMT" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_ENTERPRISE_DEVICE_ADMIN" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_PHONE_RESTRICTION" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_SECURITY" />
    <uses-permission android:name="com.samsung.android.knox.permission.KNOX_KIOSK_MODE" />
    -->
    
    <!-- Android 11+ Package Visibility -->
    <queries>
        <package android:name="com.google.android.apps.devicelock" />
        <package android:name="com.google.android.webview" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="application/pdf" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>
    </queries>
    
    <application
        android:name=".CDCApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CDCCreditSmart"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:enableOnBackInvokedCallback="true"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        android:testOnly="false"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep Link Support for Push Notifications -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="cdc" android:host="home" />
                <data android:scheme="cdc" android:host="payments" />
                <data android:scheme="cdc" android:host="contract" />
                <data android:scheme="cdc" android:host="alerts" />
            </intent-filter>
        </activity>
        
        <!-- Blocked App Explanation Activity -->
        <activity
            android:name=".appmanagement.BlockedAppExplanationActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="true" />
        
        <!-- Lock Screen Activity - Full Device Lock for Overdue Payments -->
        <activity
            android:name=".presentation.lock.LockScreenActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:lockTaskMode="if_whitelisted"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="false"
            android:directBootAware="true" />
        
        <!-- Lock Task Activity - Kiosk Mode for Severe Blocking (PayJoy-style) -->
        <activity
            android:name=".ui.lock.LockTaskActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:lockTaskMode="if_whitelisted"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:directBootAware="true" />
        
        <!-- Protection Status Diagnostic Activity -->
        <activity
            android:name=".presentation.diagnostic.ProtectionStatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart" />

        <!-- Device Admin Receiver -->
        <receiver
            android:name="com.cdccreditsmart.device.CDCDeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.DEVICE_OWNER_CHANGED" />
                <action android:name="android.app.action.PROFILE_PROVISIONING_COMPLETE" />
            </intent-filter>
        </receiver>

        <!-- Android 12+ Required Activities for Device Owner Provisioning -->
        <activity
            android:name=".presentation.admin.ProvisioningModeActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.GET_PROVISIONING_MODE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.admin.AdminPolicyComplianceActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.ADMIN_POLICY_COMPLIANCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Provisioning Success Activity - Called when provisioning completes (Android 14/15) -->
        <activity
            android:name=".presentation.admin.ProvisioningSuccessActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.app.action.PROVISIONING_SUCCESSFUL"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- ProvisioningActivity REMOVIDA - interferindo com fluxo normal do Android
             O sistema ManagedProvisioning do Android cuida desses intents automaticamente.
             Não é necessário interceptá-los com uma Activity personalizada.
        <activity
            android:name=".presentation.admin.ProvisioningActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter android:priority="1000">
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE" />
                <action android:name="android.app.action.PROVISION_MANAGED_PROFILE" />
                <action android:name="android.app.action.PROVISIONING_STATE_CHANGED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        -->

        <!-- Uninstall Flow Activity - Secure uninstall with protection reapplication -->
        <activity
            android:name=".uninstall.UninstallFlowActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".notifications.CdcMessagingService"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <!-- CDC Foreground Service - Always Active -->
        <service
            android:name=".service.CdcForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync|remoteMessaging"
            android:enabled="true"
            android:stopWithTask="false" />

        <!-- Device Admin Service - Required for Android 8+ (Android 14/15) -->
        <service
            android:name="com.cdccreditsmart.device.CDCDeviceAdminService"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_SERVICE" />
            </intent-filter>
        </service>

        <!-- Boot Receiver - Auto-start service -->
        <receiver
            android:name=".service.BootReceiver"
            android:exported="true"
            android:enabled="true"
            android:directBootAware="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Screen State Receiver - Battery optimization -->
        <receiver
            android:name=".receivers.ScreenStateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>
        
        <!-- Admin Disable Attempt Receiver - Detecta tentativa de desativar Device Admin -->
        <receiver
            android:name=".compliance.AdminDisableReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.cdccreditsmart.ADMIN_DISABLE_ATTEMPT" />
            </intent-filter>
        </receiver>

        <!-- Boot Interceptor para detectar tentativas de reboot suspeito -->
        <receiver
            android:name=".compliance.BootInterceptor"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter android:priority="999">
                <!-- Boot completed -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                
                <!-- Reboot (LIMITADO - broadcast protegido) -->
                <action android:name="android.intent.action.REBOOT" />
                
                <!-- Shutdown -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>

        <!-- Monitora instalação de apps e bloqueia apps perigosos -->
        <receiver
            android:name=".receivers.PackageInstallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Auto-provisioning receiver - Aplica proteções completas automaticamente -->
        <receiver
            android:name=".receivers.AutoProvisioningReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.cdccreditsmart.AUTO_PROVISIONING_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Auto-restart receiver - Reinicia app após crash -->
        <receiver
            android:name=".restart.RestartReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- Keep Alive Receiver - Mantém app sempre ativo -->
        <receiver
            android:name=".keepalive.KeepAliveReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.cdccreditsmart.app.ACTION_KEEP_ALIVE" />
            </intent-filter>
        </receiver>
        
        <!-- Factory Reset Recovery Receiver - Auto-reativação baseada em IMEI -->
        <receiver
            android:name=".recovery.FactoryResetRecoveryReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- Samsung Knox License Receiver - DESABILITADO TEMPORARIAMENTE (aguardando aprovação licença Knox)
             ATENÇÃO: Ao descomentar, GERAR NOVO APK e NOVO QR CODE (checksum mudará!)
        <receiver
            android:name=".samsung.KnoxLicenseReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.samsung.android.knox.intent.action.KNOX_LICENSE_STATUS" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.samsung.android.knox.intent.action.LICENSE_STATUS" />
            </intent-filter>
        </receiver>
        -->

        <!-- SMS Receiver - DESABILITADO (substituído por SMS Retriever API)
             
             ⚠️ IMPORTANTE: Este receiver foi DESABILITADO porque:
             1. Google Play Protect BLOQUEIA apps com RECEIVE_SMS/READ_SMS fora da Play Store
             2. SMS Retriever API é a solução moderna recomendada pelo Google
             3. SMS Retriever NÃO requer permissões SMS (apenas 1 tap do usuário)
             
             SOLUÇÃO ATUAL: SmsRetrieverHelper.kt
             - Usa Google Play Services SMS Retriever API
             - Requer apenas 1 consentimento do usuário por SMS
             - NÃO é bloqueado pelo Play Protect
             - Mais seguro e compatível com políticas Google
             
             Se este app precisar de autenticação SMS OTP no futuro, use SmsRetrieverHelper
             ao invés de reativar este receiver.
             
        <receiver
            android:name=".receivers.SmsReceiver"
            android:permission="android.permission.BROADCAST_SMS"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        -->

        <!-- Carrier Config Changed Receiver - Detecta troca de SIM -->
        <receiver
            android:name=".receivers.CarrierConfigChangedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telephony.action.CARRIER_CONFIG_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- SIM State Changed Receiver - Detecção de Troca de SIM (SIM Swap) -->
        <receiver
            android:name=".security.SimChangeBroadcastReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.SIM_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- File provider for sharing documents -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>