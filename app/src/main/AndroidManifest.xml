<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         PERMISSÕES ESSENCIAIS - Apenas o mínimo necessário para funcionalidade
         Play Protect bloqueia apps com permissões excessivas ou privilegiadas
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Network (ESSENCIAL) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Location for MDM LOCATE_DEVICE (ESSENCIAL) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Phone State for IMEI/device identification (ESSENCIAL para pairing) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- Device Admin (ESSENCIAL - concedido automaticamente como Device Owner) -->
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />
    
    <!-- Background processing (ESSENCIAL) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Battery optimization exemption (ESSENCIAL para Keep-Alive) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- Android 12+ Foreground Service Types (ESSENCIAL) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_REMOTE_MESSAGING" />

    <!-- Notifications (ESSENCIAL para Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Overlay for blocking screens (ESSENCIAL para progressive blocking) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Usage Stats for SettingsGuard and app blocking (ESSENCIAL) -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    
    <!-- Query packages for app blocking (ESSENCIAL) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" 
        tools:ignore="QueryAllPackagesPermission" />
    
    <!-- Alarms for WorkManager precision (ESSENCIAL) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Vibration feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Firebase Cloud Messaging -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    
    <!-- Storage for older Android (limitado a API 32) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         PERMISSÕES PARA PROVISIONAMENTO DEVICE OWNER (Android 12+)
         Estas são necessárias para o processo de provisioning funcionar
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Permite solicitar instalação de apps (UI do sistema) -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    
    <!-- Desabilitar keyguard durante provisionamento -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    
    <!-- Android 14/15: Permissões granulares de Device Policy (necessárias para provisionamento) -->
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_APPS_CONTROL"/>
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_LOCK_CREDENTIALS"/>
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_PACKAGE_STATE"/>
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_SYSTEM_UPDATE_INFO"/>
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_TIME"/>
    <uses-permission android:name="android.permission.MANAGE_DEVICE_POLICY_LOCATION"/>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         PERMISSÕES REMOVIDAS (causavam bloqueio Play Protect):
         
         - READ_PRIVILEGED_PHONE_STATE: signature/privileged, impossível obter
         - INSTALL_PACKAGES/DELETE_PACKAGES: signature, Device Owner já tem via DPM
         - MANAGE_DEVICE_ADMINS/MANAGE_PROFILE_AND_DEVICE_OWNERS: signature
         - EXPAND_STATUS_BAR/BIND_DEVICE_SERVICE: protegidas, desnecessárias
         - REBOOT: signature/privileged
         - MANAGE_USERS/CREATE_USERS: signature, Device Owner já tem via DPM
         - REQUEST_INSTALL_PACKAGES/REQUEST_DELETE_PACKAGES: Device Owner não precisa
         - FOREGROUND_SERVICE_MICROPHONE/MEDIA_PROJECTION: não usamos
         - READ_CALL_LOG/CALL_PHONE/ANSWER_PHONE_CALLS: não usamos
         - READ_PHONE_NUMBERS/READ_CONTACTS: não usamos
         - CAMERA/RECORD_AUDIO: removidos (biometria não implementada)
         - DISABLE_KEYGUARD: Device Owner já tem via DPM
         - INSTALL_SHORTCUT: desnecessário
         - ACCESS_NOTIFICATION_POLICY: desnecessário
         - Todas MANAGE_DEVICE_POLICY_*: Android 14+ DPC, Device Owner já tem
         - FOREGROUND_SERVICE_SYSTEM_EXEMPTED: protegida
         - REQUEST_PASSWORD_COMPLEXITY: Device Owner já tem via DPM
         - UPDATE_DEVICE_MANAGEMENT_RESOURCES: protegida
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Android 11+ Package Visibility -->
    <queries>
        <package android:name="com.google.android.apps.devicelock" />
        <package android:name="com.google.android.webview" />
        <package android:name="com.cdccreditsmart.stub" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="application/pdf" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>
    </queries>
    
    <!-- Custom Permission for Internal Security -->
    <permission
        android:name="com.cdccreditsmart.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.cdccreditsmart.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />
    
    <!-- Permission to access Stub ContentProvider (signature-level) -->
    <uses-permission android:name="com.cdccreditsmart.stub.ENROLLMENT_ACCESS" />

    <application
        android:name=".CDCApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CDCCreditSmart"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:enableOnBackInvokedCallback="true"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        android:testOnly="false"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep Link Support for Push Notifications -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="cdc" android:host="home" />
                <data android:scheme="cdc" android:host="payments" />
                <data android:scheme="cdc" android:host="contract" />
                <data android:scheme="cdc" android:host="alerts" />
            </intent-filter>
        </activity>
        
        <!-- Blocked App Explanation Activity -->
        <activity
            android:name=".blocking.BlockedAppExplanationActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="true" />
        
        <!-- Lock Screen Activity - Full Device Lock for Overdue Payments -->
        <activity
            android:name=".presentation.lock.LockScreenActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:lockTaskMode="if_whitelisted"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="false"
            android:directBootAware="true" />
        
        <!-- Lock Task Activity - Kiosk Mode for Severe Blocking -->
        <activity
            android:name=".ui.lock.LockTaskActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:lockTaskMode="if_whitelisted"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:directBootAware="true" />
        
        <!-- Protection Status Diagnostic Activity -->
        <activity
            android:name=".presentation.diagnostic.ProtectionStatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CDCCreditSmart" />

        <!-- Device Admin Receiver -->
        <receiver
            android:name="com.cdccreditsmart.device.CDCDeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.DEVICE_OWNER_CHANGED" />
                <action android:name="android.app.action.PROFILE_PROVISIONING_COMPLETE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- DEBUG: Provisioning Debug Receiver (remove in production) -->
        <receiver
            android:name="com.cdccreditsmart.device.ProvisioningDebugReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="1000">
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
            </intent-filter>
        </receiver>
        
        <!-- SettingsGuard Start Receiver - Inicia guard após provisioning e boot -->
        <receiver
            android:name=".receiver.SettingsGuardStartReceiver"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="com.cdccreditsmart.START_SETTINGS_GUARD" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_UNLOCKED" />
            </intent-filter>
        </receiver>

        <!-- Android 12+ Required Activities for Device Owner Provisioning -->
        <activity
            android:name=".presentation.admin.ProvisioningModeActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.GET_PROVISIONING_MODE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.admin.AdminPolicyComplianceActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.ADMIN_POLICY_COMPLIANCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Provisioning Success Activity - Called when provisioning completes (Android 14/15) -->
        <activity
            android:name=".presentation.admin.ProvisioningSuccessActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.app.action.PROVISIONING_SUCCESSFUL"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Critical ProvisioningActivity for Device Owner QR code provisioning -->
        <activity
            android:name=".presentation.admin.ProvisioningActivity"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter android:priority="1000">
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE" />
                <action android:name="android.app.action.PROVISION_MANAGED_PROFILE" />
                <action android:name="android.app.action.PROVISIONING_STATE_CHANGED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Uninstall Flow Activity - Secure uninstall with protection reapplication -->
        <activity
            android:name=".uninstall.UninstallFlowActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".notifications.CdcMessagingService"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <!-- CDC Foreground Service - Always Active -->
        <service
            android:name=".service.CdcForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync|remoteMessaging"
            android:enabled="true"
            android:stopWithTask="false" />

        <!-- Device Admin Service - Required for Android 8+ (Android 14/15) -->
        <service
            android:name="com.cdccreditsmart.device.CDCDeviceAdminService"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_SERVICE" />
            </intent-filter>
        </service>

        <!-- Boot Receiver - Auto-start service -->
        <receiver
            android:name=".service.BootReceiver"
            android:exported="true"
            android:enabled="true"
            android:directBootAware="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Screen State Receiver - Battery optimization -->
        <receiver
            android:name=".receivers.ScreenStateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>
        
        <!-- Admin Disable Attempt Receiver - Detecta tentativa de desativar Device Admin -->
        <receiver
            android:name=".protection.AdminDisableReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.cdccreditsmart.ADMIN_DISABLE_ATTEMPT" />
            </intent-filter>
        </receiver>

        <!-- Monitora instalação de apps e bloqueia apps perigosos -->
        <receiver
            android:name=".receivers.PackageInstallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- WorkManager Initializer -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup" />
        </provider>
        
        <!-- Default Firebase Notification Channel -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="cdc_default_channel" />
            
        <!-- Firebase Analytics Disabled -->
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="true" />
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />

    </application>

</manifest>
