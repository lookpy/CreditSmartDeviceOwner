<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- CDC Credit Smart Dark Theme -->
    <style name="Theme.CDCCreditSmart" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cdc_orange_primary</item>
        <item name="colorPrimaryVariant">@color/cdc_orange_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cdc_orange_secondary</item>
        <item name="colorSecondaryVariant">@color/cdc_orange_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/cdc_background</item>
        <item name="colorOnBackground">@color/cdc_text_primary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/cdc_surface</item>
        <item name="colorOnSurface">@color/cdc_text_primary</item>
        <item name="colorSurfaceVariant">@color/cdc_surface_variant</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/cdc_background</item>
        <item name="android:navigationBarColor">@color/cdc_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/cdc_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Window flags -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.CDCCreditSmart.Splash" parent="Theme.CDCCreditSmart">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Lock Screen Theme -->
    <style name="Theme.CDCCreditSmart.Lock" parent="Theme.CDCCreditSmart">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/cdc_background</item>
    </style>

    <!-- Button styles -->
    <style name="CDCButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cdc_orange_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CDCButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/cdc_orange_primary</item>
        <item name="android:textColor">@color/cdc_orange_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>