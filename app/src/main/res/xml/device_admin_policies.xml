<?xml version="1.0" encoding="utf-8"?>
<!--
    Device Admin Policies - MINIMIZADO para Play Protect
    
    REMOVIDO (triggers de malware):
    - reset-password: PESO 9 - padrão de ransomware
    - wipe-data: PESO 10 - indicador de malware
    - force-lock: PESO 7 - padrão de locker
    - limit-password: não usado
    - watch-login: não usado
    - disable-camera: não usado
    - set-global-proxy: não usado
    - disable-keyguard: não usado
    - expire-password: não usado
    - encrypted-storage: não usado
    
    MANTIDO (necessário para Device Owner):
    - disable-keyguard-features: usado para kiosk mode
    - set-user-restrictions: crítico para proteções MDM
-->
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Device Owner policies - apenas os necessários -->
        <disable-keyguard-features />
        <set-user-restrictions />
    </uses-policies>
</device-admin>
