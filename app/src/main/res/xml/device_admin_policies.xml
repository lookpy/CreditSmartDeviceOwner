<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Basic device admin policies -->
        <limit-password />
        <watch-login />
        <reset-password />
        <force-lock />
        <wipe-data />
        
        <!-- Device owner policies (Android 5.0+) -->
        <disable-camera />
        <disable-keyguard-features />
        <set-global-proxy />
        <disable-keyguard />
        <expire-password />
        <encrypted-storage />
        <set-user-restrictions />
    </uses-policies>
</device-admin>